<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/opened"
        app:motionInterpolator="linear"
        app:duration="0"/>

    <Transition
        app:constraintSetStart="@id/opened"
        app:constraintSetEnd="@id/start"
        app:motionInterpolator="easeOut"
        app:duration="500" />

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:motionInterpolator="easeOut"
        app:duration="500">
        <OnSwipe
            app:touchAnchorId="@id/detailLayout"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragUp"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/detailLayout">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/posterGuideline"
                android:paddingTop="24dp"
                android:layout_marginTop="0dp"/>
            <PropertySet
                android:visibility="visible" />
            <CustomAttribute
                app:attributeName="setElevation"
                app:customDimension="4dp"/>
        </Constraint>
        <Constraint
            android:id="@+id/tasksLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detailLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint android:id="@+id/sliderView">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="221dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <PropertySet
                android:visibility="visible"/>
        </Constraint>
        <Constraint
            android:id="@+id/posterGuideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/sliderView"
            android:layout_marginBottom="32dp"
            />
        <Constraint
            android:layout_height="221dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/sliderView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/opened">
        <Constraint android:id="@+id/detailLayout">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/posterGuideline"
                android:paddingTop="24dp"
                android:layout_marginTop="120dp"/>
            <PropertySet
                android:visibility="invisible"/>
        </Constraint>
        <Constraint
            android:id="@+id/tasksLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detailLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:id="@+id/sliderView"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint
            android:id="@+id/posterGuideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/sliderView"
            android:layout_marginBottom="32dp"
            />
        <Constraint
            android:layout_height="221dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/sliderView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="24dp">
        </Constraint>
        <Constraint
            android:id="@+id/tasksLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/detailLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint android:id="@+id/sliderView">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="221dp"
                app:layout_constraintTop_toTopOf="parent"/>
            <PropertySet
                android:visibility="invisible"/>
        </Constraint>
        <Constraint
            android:id="@+id/posterGuideline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@id/sliderView"
            android:layout_marginBottom="32dp"
            />
    </ConstraintSet>
</MotionScene>