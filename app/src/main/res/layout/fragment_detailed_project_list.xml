<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailedProjectListFragment"
    android:background="@color/colorPrimaryApp">

    <com.example.cryptofunding.ui.custom.ClippingConstraintLayout
        android:id="@+id/clippingConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:clipChildren="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bottomleft_rounded_background"
        app:bottomLeftCornerRadius="66dp"
        android:elevation="6dp"
        android:paddingTop="?attr/actionBarSize"
        android:clickable="true"
        android:focusable="true"
        android:transitionName="categoryLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoriesReyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="true"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="25dp" />

    </com.example.cryptofunding.ui.custom.ClippingConstraintLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/projectsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="140dp"
        android:clipToPadding="false"
        android:visibility="gone"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingAnimation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/clippingConstraintLayout"
        app:layout_constraintBottom_toBottomOf="@id/projectsRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_fileName="loadingn.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:visibility="visible"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>