<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryApp"
    tools:context=".CreateWalletFragment">

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_importwallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <EditText
            android:id="@+id/importwallet_login"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:hint="@string/walletname_hint"
            android:lines="1"
            android:textColorHint="@color/colorSecondaryAppGradient"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="49dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBackgroundWhiteApp"
            app:layout_constraintVertical_chainStyle="packed"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/importwallet_privatekey"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:lines="1"
            android:hint="@string/walletprivatekey_hint"
            android:textColorHint="@color/colorSecondaryAppGradient"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="49dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorBackgroundWhiteApp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/importwallet_password"
            android:layout_width="312dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:lines="1"
            android:hint="@string/walletpassword_hint"
            android:textColorHint="@color/colorSecondaryAppGradient"
            android:fontFamily="@font/opensans_regular"
            android:paddingStart="49dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorBackgroundWhiteApp"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_importwallet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:text="@string/import_text"
        android:textSize="21sp"
        android:textColor="@color/colorBackgroundWhiteApp"
        android:fontFamily="@font/opensans_semibold"
        android:background="@drawable/button_background"
        android:elevation="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>