<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTasksFragment"
    android:background="@color/colorPrimaryApp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topBarGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?attr/actionBarSize"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tasksRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/topBarGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        tools:listitem="@layout/item_task"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:textSize="21sp"
        android:textColor="@color/colorBackgroundWhiteApp"
        android:fontFamily="@font/opensans_semibold"
        android:background="@drawable/selector_button_state"
        android:elevation="6dp"
        android:text="@string/launch_project"/>

</androidx.constraintlayout.widget.ConstraintLayout>