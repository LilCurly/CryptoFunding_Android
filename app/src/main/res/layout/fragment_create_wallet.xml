<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.cryptofunding.viewmodel.NewWalletViewModel" />
    </data>
    <androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/createwallet_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryApp"
        app:layoutDescription="@xml/create_wallet"
        tools:context=".CreateWalletFragment">

        <LinearLayout
            android:id="@+id/createwallet_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_createwallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/createwallet_login"
                android:layout_width="312dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_state_selector"
                android:elevation="4dp"
                android:lines="1"
                android:hint="@string/walletname_hint"
                android:textColorHint="@color/colorSecondaryAppGradient"
                android:fontFamily="@font/opensans_regular"
                android:paddingStart="27dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorBackgroundWhiteApp"
                android:text="@={viewModel.name}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.nameError}"
                fadeVisible="@{viewModel.nameError}"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                tools:text="error"
                android:textColor="@android:color/holo_red_light"
                android:fontFamily="@font/opensans_regular"
                android:textSize="12sp"
                android:visibility="gone"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/createwallet_password"
                android:layout_width="312dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_state_selector"
                android:elevation="4dp"
                android:lines="1"
                android:hint="@string/walletpassword_hint"
                android:textColorHint="@color/colorSecondaryAppGradient"
                android:fontFamily="@font/opensans_regular"
                android:paddingStart="27dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorBackgroundWhiteApp"
                android:text="@={viewModel.password}"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.passwordError}"
                fadeVisible="@{viewModel.passwordError}"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                tools:text="error"
                android:textColor="@android:color/holo_red_light"
                android:fontFamily="@font/opensans_regular"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:id="@+id/button_createwallet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:text="@string/create"
            android:textSize="21sp"
            android:textColor="@color/colorBackgroundWhiteApp"
            android:fontFamily="@font/opensans_semibold"
            android:background="@drawable/button_background"
            android:elevation="6dp"/>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>