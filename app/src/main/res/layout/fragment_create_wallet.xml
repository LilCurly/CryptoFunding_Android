<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.cryptofunding.viewmodel.NewWalletViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/createwallet_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryApp"
        tools:context=".CreateWalletFragment">

        <LinearLayout
            android:id="@+id/createwallet_linear"
            android:layout_width="320dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_createwallet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="10"
            android:paddingTop="43dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/createwallet_login"
                android:layout_width="312dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_state_selector"
                android:elevation="4dp"
                android:lines="1"
                android:hint="@string/walletname_hint"
                android:textColorHint="@color/colorSecondaryAppGradient"
                android:fontFamily="@font/opensans_regular"
                android:paddingStart="27dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorBackgroundWhiteApp"
                android:text="@={viewModel.name}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.nameError}"
                fadeVisible="@{viewModel.nameError}"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                tools:text="error"
                android:textColor="@color/colorWarning"
                android:fontFamily="@font/opensans_regular"
                android:textSize="12sp"
                android:visibility="gone"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/createwallet_password"
                android:layout_width="312dp"
                android:layout_height="40dp"
                android:background="@drawable/textview_state_selector"
                android:elevation="4dp"
                android:lines="1"
                android:hint="@string/walletpassword_hint"
                android:textColorHint="@color/colorSecondaryAppGradient"
                android:fontFamily="@font/opensans_regular"
                android:paddingStart="27dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorBackgroundWhiteApp"
                android:text="@={viewModel.password}"
                android:inputType="textPassword"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.passwordError}"
                fadeVisible="@{viewModel.passwordError}"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                tools:text="error"
                android:textColor="@color/colorWarning"
                android:fontFamily="@font/opensans_regular"
                android:textSize="12sp"
                android:visibility="gone"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_createwallet"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:textSize="21sp"
            android:textColor="@color/colorBackgroundWhiteApp"
            android:fontFamily="@font/opensans_semibold"
            android:background="@drawable/selector_button_state"
            android:elevation="6dp"
            android:text="@string/create"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="@id/button_createwallet"
            app:layout_constraintBottom_toBottomOf="@id/button_createwallet"
            app:layout_constraintStart_toStartOf="@id/button_createwallet"
            app:layout_constraintEnd_toEndOf="@id/button_createwallet"
            android:elevation="8dp"
            app:lottie_fileName="loadingn.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:visibility="gone"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successAnimation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/button_createwallet"
            app:layout_constraintBottom_toBottomOf="@id/button_createwallet"
            app:layout_constraintStart_toStartOf="@id/button_createwallet"
            app:layout_constraintEnd_toEndOf="@id/button_createwallet"
            android:elevation="8dp"
            app:lottie_fileName="success.json"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            android:visibility="gone"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/failureAnimation"
            android:layout_width="65dp"
            android:layout_height="65dp"
            app:lottie_fileName="failure.json"
            app:layout_constraintTop_toTopOf="@id/button_createwallet"
            app:layout_constraintBottom_toBottomOf="@id/button_createwallet"
            app:layout_constraintStart_toStartOf="@id/button_createwallet"
            app:layout_constraintEnd_toEndOf="@id/button_createwallet"
            android:elevation="8dp"
            app:lottie_loop="false"
            app:lottie_autoPlay="true"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>