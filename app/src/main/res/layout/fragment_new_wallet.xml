<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newwallet_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NewWalletFragment"
    android:background="@color/colorPrimaryApp" >
    
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/newWallet_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextColor="@color/colorBackgroundWhiteApp"
        app:tabBackground="@color/colorSecondaryApp"
        app:tabIndicatorColor="@color/colorBackgroundDarkApp"
        app:tabIndicatorHeight="48dp"
        android:elevation="10dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/newWallet_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/newWallet_tablayout"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>